extends ../layout

block content
  div  
    p.greeting Hi, #{user.firstName}!
  div
    h2 Recent Post
      each post in posts 
        a(href="dashboard"+post.url)
          div.post 
            div.postInfo
              span 
                strong= user.isMember ? post.createdByUser.username : "anonymous"       
              span.postDate 
                em= user.isMember ? post.createdDate_formatted : ""
            div 
              p.postTitle= post.title
              p.postText= post.text

